{
    "name": "TextToAudio",
    "version": "1.0.0",
    "description": "Summarize selected text and convert it to audio",
    "manifest_version": 3,
    "author": "Tomer Raitsis",
    "action": {
      "default_popup": "index.html",
      "default_title": "",
      "default_icon": "icon.png"
    },
    "permissions": [
      "activeTab"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'none'; default-src 'self' https:"
    }
  }
  